#!/usr/bin/env node

var pg = require('pg');

var sendgrid  = require('sendgrid')(
  process.env.SENDGRID_USERNAME,
  process.env.SENDGRID_PASSWORD
);

pg.connect(process.env.DATABASE_URL, function(err, client, done) {
  var handleError = function(err) {
    if(!err) return false;
    done(client);
    next(err);
    return true;
  };

  client.query('delete from tokens where now()-created>= "10 days"', function(err, result) {
    if(handleError(err, client, done)) return;

    
      sendgrid.send({
          to: 'mburnside@salesforce.com',
          from: 'asdetect@email.com',
          subject: 'Delete postgres tokens >= 10 days old.',
          text: 'Automated email from sendgrid.'
        }, function(err, json) {
          if (err) {
            console.error(err);
          }

          done();
          pg.end();
      });
    
  });
});
